<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash"
    android:orientation="vertical"
    android:background="@drawable/img_hormigas_principal"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">


        <TextView
            android:id="@+id/txTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:background="#F5765B"
            android:textColor="#B82100"
            android:padding="4dp"
            android:text="Mata Hormigas"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieMovimiento"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textAlignment="center"
            app:lottie_autoPlay="true"
            app:lottie_fileName="cargando.json"
            app:lottie_imageAssetsFolder="assets"
            app:lottie_loop="true" />
    </LinearLayout>

</LinearLayout>